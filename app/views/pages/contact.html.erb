<%= render "shared/navbar" %>

<section class="contact-page">
  <div class="contact-container">
    <h2 class="section-title">Contact</h2>
    <p class="contact-intro">
      Une question, une commande personnalisée ou juste envie de nous dire bonjour ?
      Remplis ce formulaire ou utilise nos coordonnées ci-dessous.
    </p>

    <div class="contact-grid">
      <!-- Colonne gauche : formulaire -->
      <div class="contact-form-column">
        <%= form_with url: contact_submit_path, method: :post, local: true, class: "contact-form" do %>
          <div class="form-group">
            <label for="name">Nom</label>
            <%= text_field_tag :name, nil, id: "name", required: true %>
          </div>

          <div class="form-group">
            <label for="email">Adresse e-mail</label>
            <%= email_field_tag :email, nil, id: "email", required: true %>
          </div>

          <div class="form-group">
            <label for="message">Message</label>
            <%= text_area_tag :message, nil, id: "message", rows: 5, required: true %>
          </div>

          <button type="submit" class="btn btn-primary">Envoyer</button>
        <% end %>
      </div>

      <!-- Colonne droite : infos -->
      <div class="contact-info-column">
        <div class="contact-info">
          <p><i class="fa-solid fa-phone"></i> <a href="tel:+33322723654">03 22 72 36 54</a></p>
          <p><i class="fa-solid fa-envelope"></i> <a href="mailto:contact@letamine.fr">contact@letamine.fr</a></p>
        </div>

        <div class="opening-hours">
          <h3>Horaires</h3>
          <ul>
            <li>Lundi : Fermé </li>
            <li>Mardi au Jeudi : 9h00 - 12h30, 14h00 - 19h00</li>
            <li>Samedi : 9h00 - 19h00</li>
            <li>Dimanche : 9h30 - 12h30</li>
          </ul>
        </div>

        <div class="map-container">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2564.3314302580156!2d2.2620040766915124!3d50.00514287151056!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47dd7e1b962f2497%3A0x6cda72bcd607edb8!2sL&#39;Etamine!5e0!3m2!1sfr!2sfr!4v1757711663517!5m2!1sfr!2sfr"
            width="100%"
            height="250"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
      </div>
    </div>
  </div>
</section>

<%= render "shared/footer" %>
