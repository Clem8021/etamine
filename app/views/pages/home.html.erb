<section class="navbar">
  <div class="navbar-container">
    <div class="navbar-logo"><%= link_to "l'Etamine", root_path, class: "logo-link" %></div>
    <ul class="navbar-links">
      <li><%= link_to "Accueil" %></li>
      <li><%= link_to "Boutique" %></li>
      <li><%= link_to "À propos", root_path(anchor: "about"), data: { turbo: false } %></li>
      <li><%= link_to "Contact" %></li>
    </ul>
    <div class="navbar-toggle" id="mobile-menu">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </div>
  </div>
</section>

<section class="hero">
  <div class="container text-center">
  </div>
</section>

<section class="best-sellers">
  <div class="container">
    <h2 class="section-title">Nos compositions populaires</h2>
    <div class="products-grid">
      <% Product.limit(3).each do |product| %>
        <div class="product-card">
          <%= image_tag product.image_url, class: "product-image" %>
          <h3 class="product-name"><%= product.name %></h3>
          <p class="product-price"><%= number_to_currency(product.price_euros, unit: "€") %></p>
          <%= link_to "Voir", product_path(product), class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</section>

<section class="about", id="about">
  <div class="container">
    <h2 class="section-title">À propos de L’Étamine</h2>
    <p class="about-text">
      Fleuriste artisanale à Flesselles, L’Étamine vous accompagne pour tous vos événements :
      mariages, naissances, hommages. Commande en ligne ou retrait en boutique.
    </p>
  </div>
</section>
