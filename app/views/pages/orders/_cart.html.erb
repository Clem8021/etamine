<h2>Votre Panier</h2>

<% if order.order_items.any? %>
  <ul class="cart-items">
    <% order.order_items.each do |item| %>
      <li class="cart-item">
        <strong><%= item.product.name %></strong><br>
        Couleur : <%= item.color.presence || "N/A" %><br>
        Taille : <%= item.size.presence || "N/A" %><br>
        Options : <%= item.addons.presence || "Aucune" %><br>
        Quantité : <%= item.quantity %><br>
        <strong>Sous-total : <%= number_to_currency(item.product.price_euros * item.quantity, unit: "€") %></strong><br>
      </li>
    <% end %>
  </ul>
  <p><strong>Total : <%= number_to_currency(order.total_price, unit: "€") %></strong></p>
<% else %>
  <p>Votre panier est vide.</p>
<% end %>
