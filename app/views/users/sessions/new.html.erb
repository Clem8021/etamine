<%= render "shared/navbar" %>

<div class="auth-container">
  <div class="auth-card">
    <h2 class="auth-title">Se connecter</h2>

    <%= form_with model: resource, url: session_path(resource_name), local: true, class: "auth-form" do |f| %>
      <div class="form-group">
        <%= f.label :email, "Adresse e-mail", class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Mot de passe", class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group remember-me">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "Se souvenir de moi" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Connexion", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= link_to "Retour au site", root_path, class: "auth-link" %>
    </div>
  </div>
</div>
