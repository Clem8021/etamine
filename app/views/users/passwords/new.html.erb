<div class="floating-back-button">
  <%= link_to root_path, class: "back-link" do %>
    <span>←</span>
    <%= image_tag "logo.png", alt: "Logo Etamine", class: "logo-small" %>
  <% end %>
</div>

<div class="auth-container">
  <div class="auth-card">
    <h2 class="auth-title">Mot de passe oublié ?</h2>
    <p class="auth-subtitle">
      Entrez votre email et nous vous enverrons un lien pour réinitialiser votre mot de passe.
    </p>

    <%= form_with model: resource,
                  url: password_path(resource_name),
                  local: true,
                  class: "auth-form" do |f| %>
      <div class="form-group">
        <%= f.label :email, "Email" %>
        <%= f.email_field :email, autofocus: true, class: "form-input" %>
      </div>

      <div class="form-actions">
        <%= f.submit "Envoyer le lien de réinitialisation",
                      class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
