<div class="floating-back-button">
  <%= link_to root_path, class: "back-link" do %>
    <span>←</span>
    <%= image_tag "logo.png", alt: "Logo Etamine", class: "logo-small" %>
  <% end %>
</div>

<h2 class="cart-title">🛒 Votre Panier</h2>

<% if @order.order_items.any? %>
  <div class="cart-items-container">
    <% @order.order_items.each do |item| %>
      <div class="cart-item-card">
        <div class="cart-item-info">
          <strong class="cart-item-name"><%= item.product.name %></strong>
          <p>Couleur : <%= item.color.presence || "N/A" %></p>
          <p>Taille : <%= item.size.presence || "N/A" %></p>
          <p>Options : <%= item.addons.presence || "Aucune" %></p>
          <p>Quantité : <%= item.quantity %></p>
          <p class="cart-item-subtotal"><strong>Sous-total : <%= number_to_currency(item.product.price_euros * item.quantity, unit: "€") %></strong></p>
        </div>
      </div>
    <% end %>
  </div>

  <div class="cart-summary">
    <p><strong>Total : <%= number_to_currency(@order.total_price, unit: "€") %></strong></p>
    <%= link_to "Passer à la caisse", checkout_path, class: "btn btn-primary" %>
  </div>
<% else %>
  <p class="cart-empty">Votre panier est vide.</p>
<% end %>
