<h1>Votre panier</h1>

<%= form_with model: @order, url: checkout_path, method: :patch do |f| %>
  <% @order.order_items.each do |item| %>
    <div>
      <%= item.product.name %> – <%= item.quantity %> × <%= number_to_currency(item.product.price_cents / 100.0, unit: "€") %>
      <%= button_to "Supprimer", order_order_item_path(@order, item), method: :delete %>
    </div>
  <% end %>

  <p>Total : <%= number_to_currency(@order.total_price, unit: "€") %></p>

  <div>
    <%= f.label :full_name %>
    <%= f.text_field :full_name %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div>
    <%= f.label :address %>
    <%= f.text_area :address %>
  </div>

  <%= f.submit "Passer la commande" %>
<% end %>
