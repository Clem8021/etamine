<h2>Informations de livraison / retrait</h2>

<%= form_with model: @delivery_detail,
              url: order_delivery_detail_path(@order),
              local: true,
              data: { controller: "delivery" } do |f| %>

  <!-- Choix du mode -->
  <div class="form-group">
    <%= f.label :mode, "Mode de réception" %><br>
    <%= f.select :mode,
          [["Retrait en boutique", "pickup"], ["Livraison", "delivery"]],
          {},
          class: "form-control",
          data: { action: "change->delivery#toggleMode" } %>
  </div>

  <!-- Champs spécifiques à la livraison -->
  <div data-delivery-target="deliveryFields" style="display:none;">
    <h3>Informations destinataire</h3>

    <div class="form-group">
      <%= f.label :recipient_name, "Nom" %>
      <%= f.text_field :recipient_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :recipient_firstname, "Prénom" %>
      <%= f.text_field :recipient_firstname, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :recipient_address, "Adresse" %>
      <%= f.text_field :recipient_address, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :recipient_zip, "Code postal" %>
      <%= f.text_field :recipient_zip, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :recipient_city, "Ville" %>
      <%= f.text_field :recipient_city, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :recipient_phone, "Téléphone" %>
      <%= f.telephone_field :recipient_phone, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :ceremony_info, "Infos cérémonie (si deuil)" %>
      <%= f.text_area :ceremony_info, class: "form-control" %>
    </div>
  </div>

  <!-- Champs spécifiques au retrait -->
  <div data-delivery-target="pickupFields" style="display:none;">
    <h3>Retrait en boutique</h3>

    <div class="form-group">
      <%= f.label :date, "Date de retrait" %>
      <%= f.date_field :date, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :time_slot, "Heure" %><br>
      <%= f.select :time_slot,
            [["Matin (9h - 12h30)", "morning"], ["Après-midi (14h - 19h)", "afternoon"]],
            {},
            class: "form-control" %>
    </div>
  </div>

  <!-- Infos expéditeur (toujours demandées) -->
  <h3>Expéditeur</h3>
  <div class="form-group">
    <%= f.label :sender_name, "Nom" %>
    <%= f.text_field :sender_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :sender_phone, "Téléphone" %>
    <%= f.telephone_field :sender_phone, class: "form-control" %>
  </div>

  <!-- Notes -->
  <div class="form-group">
    <%= f.label :notes, "Précisions" %>
    <%= f.text_area :notes, class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= f.submit "Enregistrer", class: "btn btn-primary" %>
  </div>
<% end %>
